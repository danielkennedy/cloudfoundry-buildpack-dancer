#!/usr/bin/env bash
# usage: bin/compile <build-dir> <cache-dir>

# Fail fast, fail hard
set -eo pipefail

# Directories
BUILD_DIR=$1
CACHE_DIR=$2
mkdir -p "$BUILD_DIR" "$CACHE_DIR"

# Files
which curl || apt-get install curl

export PERL5LIB="$BUILD_DIR/local/lib/perl5"
export PERL_CPANM_OPT="--quiet --notest -l $BUILD_DIR/local"

DOWNLOAD=http://www.cpan.org/src/5.0/perl-5.20.0.tar.gz

# Do we have a downloaded source tarball?
if [ ! -e $CACHE_DIR/perl-5.20.0.tar.gz ]
then
  cd $CACHE_DIR
  curl -O $DOWNLOAD
  tar -vxzf perl-5.20.0.tar.gz
fi

echo "CACHE:"
ls -alrt $CACHE_DIR

# Do we have a compiled version of perl?
# FIXME: Better use of caching!
if [ ! -e $BUILD_DIR/local/bin/perl ]
then
  cd $CACHE_DIR/perl-5.20.0
  ./Configure -des -Dprefix=$BUILD_DIR/local
  make
  make test
  make install
fi

echo "BUILT:"
ls -alrt $BUILD_DIR/local

# Do we have the Dancer module?
perl -MDancer -e 1 || curl -L http://cpanmin.us | perl - -L $BUILD_DIR/local Dancer

echo "DANCER:"
find $BUILD_DIR/local -name Dancer

# Do we have the YAML module?
perl -MYAML -e 1 || curl -L http://cpanmin.us | perl - -L $BUILD_DIR/local YAML

echo "YAML:"
find $BUILD_DIR/local -name YAML

echo "COMPILED"
